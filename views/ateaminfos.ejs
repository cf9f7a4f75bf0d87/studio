<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>组织信息发布</title>
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/stylesheets/top.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/header.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/nav.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/aleftnav.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/b3.css">
    <script type="text/javascript" src="/javascripts/jquery-2.1.1.js"></script>
    <script type="text/javascript" src="/javascripts/small.js"></script>
    <script type="text/javascript" src="/javascripts/link_fabu.js"></script>
    <script type="text/javascript" src="/javascripts/link_b3.js"></script>
</head>
<body>
<%- include atop %>
<%- include aheader %>
<%- include anav%>
<%- include aleftnav%>
<div class="contentnav">
      <span>
            <a href="/admin/">螺丝工作室后台管理 ></a>
            <a href="/admin/Sendout">发布</a>
            <a href="#">组织新闻发布</a>
      </span>
</div>
<div id="total">
    <h>组织信息发布</h>
 <% if(typeof(data)=='object'){%>
    <%for(var i=0;i<data.length;i++){%>
 <div class="old">
     <input type="hidden" class="e" value="<%=data[i]._id%>">
     <span class="a"><%=data[i].ogroup%></span>
     <span class="d">负责人:  </span>   <span class="b"><%=data[i].oleader%></span>
     <span >更新日期: <span class="c"><%= data[i].uptime.toLocaleDateString()%></span> </span>
    <input  type="image"  class="shanchu"  value="删除" src="/images/u53.png">
    <input  type="image"  class="xiugai"  value="修改"  src="/images/bianji.png" >
     <div class="div1">
         <p class ="text">
          <%= data[i].ocontent%>
         </p>
     </div>
     </div>
 <%}}
    else {%><p>啥都没有..<%=data%></p><%}%>
    <!--    /*两个模板*/ -->
    <!--  模板1 修改时 使用 -->
    <div id="new" >
        <input type="hidden" class="e_x">
        <input type="text" class="a_x" class="i1"  >
        <span>负责人:<input type="text" class="b_x" >  </span>
        <span class="sp2">更新日期(format: 2015-02-30 11:22:33):</span><input type="text" class="c_x" placeholder="2015-02-30 11:22:33"></span>
        <input  type="image"  class="shanchu"  value="删除"  src="/images/u53.png" style="width: 18px; height: 18px; float: right; margin-top: 4px; margin-right: 10px;">
        <input  type="image"  class ="queren2"  value="确认" class="images" src="/images/dui.png" style="width: 18px; height: 18px; float: right; margin-top: 4px; margin-right: 10px;">
        <div class="div3">
            <textarea class ="text_x">
            </textarea>
        </div>

    </div>
    <!-- 模板2 old模板 -->
    <div id="old" >
        <input type="hidden" class="e" >
        <span class="a"></span>
        <span class="d">负责人:  </span>   <span class="b"></span>
        <span class="sp1">更新日期: <span class="c"></span> </span>
        <input  type="image"  class="shanchu"  value="删除" src="/images/u53.png">
        <input  type="image"  class="xiugai"  value="修改"  src="/images/bianji.png" >
        <div class="div1">
            <p class ="text">
            </p>
        </div>
    </div>

    <div id="more">
        <p id="add">发布消息</p>
    </div>

</div>

</body>
</html>
