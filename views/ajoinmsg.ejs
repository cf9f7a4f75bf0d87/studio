            <div class="block" >
                <p style="font-size:20px; text-align:center;">加载更多</p>
            </div>
        </div>

        <div id="text2">

            <input type="image" value="拒绝" class="j3">
            <input type="image" value="同意" class="t3">

            <div class="block" >
                <p style="font-size:20px; text-align:center;">加载更多</p>
            </div>

        </div>
        <%
            if(data==null||data.length==0){
                %><h2>没有消息诶..</h2><%
            }else if(typeof(data)=='object'){
         for(var i=0;i<data.length;i++){
            data[i].mcontent=data[i].mcontent.replace(/\r\n/ig,"  ");
         %>
        <script>

            var sel="<div class ='div1'><span><%=data[i].mtime%>  <%=data[i].uname%>想加入<%=data[i].gid.gname%>： </span> <form action=\"\" method='post'> <input type='hidden' value='<%=data[i]._id%>' name='msg'><input type='checkbox' class='checkbox1' id='i1'value='<%=data[i]._id%>' name='msgs'><input type='image' class='shanchu' src='/images/u53.png' onclick=\"return false;\" value='0'><input type='image' class='queren' src='/images/dui.png' onclick=\"return false;\" value='1'></form></br><p><%=data[i].mcontent%></p></div>";
            var section=$(sel);
            var sectioncpy=$(sel);
            <% if(data[i].gid.gname=='one'){%>
            $("#text0 .block").before(sectioncpy);
            <% }else{%>
            $("#text1 .block").before(sectioncpy);
            <%}%>
            $("#text2 .block").before(section);
        </script>
             <%
         }
      }
       %>
