        <div id="a">

            <p>已选技能</p>
            <div id="sel" style="width:440px;height:80px">


            </div>

            <p>技能列表</p>
            <div id="wei" style="width:440px;height:80px">
                <%for(var i=0;i<data.allSkills.length;i++){%>
                <span><input value="<%=data.allSkills[i]%>" readonly><img class="add" src="/images/u77.png"></span>
                <%}%>
            </div>

            <input type="button" class="sel_ok" value="选好啦">
            <div>
            <p>自定义技能</p>
            <input id="shuru" type="text"><img id="zidingyi" src="/images/u77.png">
            </div>

        <div>
