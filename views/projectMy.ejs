<html>
<head>
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/stylesheets/top.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/header.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/nav.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/leftnav.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/wodexiangmu.css">

    <script type="text/javascript" src="/javascripts/jquery-2.1.1.js"></script>
    <script type="text/javascript" src="/javascripts/wodexiangmu.js"></script>

    <script type="text/javascript" src="/javascripts/link.js"></script>


</head>

<body>
<%- include top %>
<%- include header %>
<%- include nav%>
<div id="con">
    <%- include leftnav%>
    <div class="contentnav">
      <span>
        <a href="/user/">螺丝工作室个人管理 ></a>
        <a href="projectInfo">申请项目 ></a>
        <a href="projectMy">我的项目</a>
      </span>
    </div>
    <div id="content">
        <div id="b">
            <span>我</span><span>的</span><span>项</span><span>目</span>
            <select class="field">
                <option id="op1" value="0">待审核</option>
                <option id="op2" value="1">招募中</option>
                <option id="op3" value="2">进行中</option>
                <option id="op4" value="3">已完成</option>
            </select>
        </div>

        <% for(var i=0; i<data.length;i++){%>
        <div class="text">
            <input class="pid" type="hidden" value="<%=data[i]._id%>">
            <span class="span1"><%=data[i].ptitle%></span>
                <span class="span2">类型：<%=data[i].ptype%></span>
            <span class="span3">状态：<%=data[i].pstaute%></span>
            <span class="span4">更新日期: <%=data[i].ppubTime.toLocaleDateString()%></span>
            <p><%=data[i].pcontent%></p>
            <span class="span5">成员：</span>
            <% for (var j=0;j<data[i].pmembers.length;j++){%>
            <span class="span5"><%=data[i].pmembers[j].uname%></span>
                <%}%>
                <span id="span6">附件：</span>
                <%for (var j=0;j<data[i].pdocs.length;j++){%>
                <a href="<%data[i].pdocs[j]%>"><span class="span7">需求文档</span></a>
                <%}%>
            <span class="span8"><input type="submit" class="quitMyProject" value="我不想干啦.."></span>
        </div>
        <%}%>

    </div>
    </div>
</body>

</html>